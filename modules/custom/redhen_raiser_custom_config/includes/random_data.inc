function random_data_street() {
  $number = (string) rand(111, 99999);

  $names = array(
    'Pinehurst',
    'Laurelwood',
    'Broadway',
    'Washington',
    'Lincoln',
    'MLK',
    'Burnside',
    'Stark',
  );
  $name = random_data_array_item($names);

  $suffixes = array(
    'Blvd',
    'St',
    'Ave',
  );
  $suffix = random_data_array_item($suffixes);

  $street = $number . ' ' . $name . ' ' . $suffix;
  return $street;
}

