/**
 * Return a random element of an array.
 *
 * @param array $items
 *   Array of items.
 *
 * @return array|stdClass|string
 *   One item of the array.
 */
function random_data_array_item(array $items) {
  if (count($items >= 1)) {
    $delta = array_rand($items, 1);
    $item = $items[$delta];
  }
  else {
    $item = NULL;
  }
  return $item;
}
